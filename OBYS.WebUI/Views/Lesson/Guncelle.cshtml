@model Lesson
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kayıt Güncelle</h1>

@if (ViewBag.LessonUpdateError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.LessonUpdateError
    </div>
}
else
{
   <form asp-controller="Lesson" asp-action="Guncelle" method="post">
        <input type="hidden" name="ID" value="@Model.ID" />
        <input type="text" name="LessonName" value="@Model.LessonName" placeholder="Ders Adı Giriniz" /><br /><br />
        <input type="submit" value="Güncelle" class="btn btn-success" />
   </form> 
}

