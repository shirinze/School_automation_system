@model IEnumerable<Lesson>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ders Listelesi</h1>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
      Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Ders Adı</th>
          <th scope="col">###</th>
          <th scope="col">###</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
           <tr>
              <th scope="row">@item.ID</th>
              <td>@item.LessonName</td>
              <td><a asp-controller="Lesson" asp-action="Guncelle" asp-route-id="@item.ID" class="btn btn-success">Güncelle</a></td>
              <td><a asp-controller="Lesson" asp-action="Sil" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
           </tr>      
        }
      </tbody>
    </table>    
}



